
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-page">

    <div class="login-content">
        <img src="~/Content/Site/imgs/logo.png" alt="" class="logo-form">
        <h4 class="title-form">   استرجاع الحساب</h4>
        <div class="input-group">
            <input type="password" id="Password" name="Password" placeholder=" كلمة المرور الجديدة" class="form-control">
            <span><img src="~/Content/Site/imgs/Group 3.png" width="16"></span>
        </div>
        <div class="input-group">
            <input type="password"  id="ConfirmPassword" name="ConfirmPassword" placeholder="تأكيد كلمة المرور الجديدة " class="form-control">
            <span><img src="~/Content/Site/imgs/Group 3.png" width="16"></span>
        </div>

        <a @*href="login.html"*@ onclick="ResetPassword()" class="btn-site w-100">   ارسال   </a>

    </div>
</div>

@section Scripts {
    <script>

        function ResetPassword() {

            var Password = $("#Password").val();
            var ConfirmPassword = $("#ConfirmPassword").val();


            if ($("#Password").val() == "") {
                toastr.error("من فضلك ادخل كلمة المرور ");
                ScrollItem("#Password");
                return false;
            }

            if (Password.length < 6) {
                toastr.error("يرجى الا تقل كلمة المرور عن 6 ارقام ");
                ScrollItem("#Phone");
                return false;
            }

            if ($("#ConfirmPassword").val() == "") {
                toastr.error("من فضلك ادخل كلمة المرور ");
                ScrollItem("#ConfirmPassword");
                return false;
            }

            if (Password != ConfirmPassword) {
                toastr.error("كلمتا المرور غير متطابقتين");
                ScrollItem("#ConfirmPassword");
                return false;
            }
            var fd = new FormData();

            fd.append("newpassword", Password);

            $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: "POST",
                url: "/Site/ResetPassword",
                data: fd,
                contentType: false,
                processData: false,
                success: function (data) {

                    if (data.key == 0) {
                        toastr.error(data.msg);
                        return false;
                    }
                    else if (data.key == 1) {
                        toastr.success(data.msg);
                        setTimeout(function () {
                            window.location.href = "/Site/Login";
                        }, 3000);
                    }
                }
            });
        }

    </script>

}
