@model IEnumerable<WaterDelivery.ViewModels.ClientViewModel>

@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}

<style type="text/css">

    th, td > p {
        text-align: center;
    }
</style>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h4 class="header-title m-t-0 m-b-30"></h4>
            <div class="row">

                <!-- -------------------------------------------------------------------------------------------------- -->
                <h2 style="text-align:center">التجار</h2>

                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th style="text-align:center">
                                اسم التاجر
                            </th>
                            <th style="text-align:center">
                                المدينة
                            </th>
                            <th style="text-align:center">
                                صورة التاجر
                            </th>
                            <th style="text-align:center">
                                المندوبين
                            </th>

                        </tr>
                    </thead>
                    <tbody style="text-align:center">

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.user_name
                            </td>
                            <td>
                                @if (item.city_name != null)
                                {
                                    @item.city_name
                                }
                                else
                                {
                                    <label style="color:red"> - </label>
                                }
                            </td>
                            <td>
                                <img src="~/Content/Img/User/@item.img" height="60" width="60" />
                            </td>
                            <td>
                                @Html.ActionLink("المندوبين", "Index", "Providers", new { FkUser = item.userId }, new { @class = "btn btn-primary btn-rounded w-md waves-effect waves-light m-b-5" })
                            </td>



                        </tr>
                        }
                    </tbody>

                </table>
            </div><!-- end row -->
        </div>
    </div><!-- end col -->
</div>

