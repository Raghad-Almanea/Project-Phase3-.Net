@model IEnumerable<WaterDelivery.ViewModels.OrderSiteViewModel>
@{
    ViewBag.Title = "MyOrders";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}



@if (Model.Count() > 0)
{
    <div class="container sec-padd">

        <ul class="nav nav-pills mb-3 nav-radius" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">  الطلبات المعلقة</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="pills-profile1-tab" data-toggle="pill" href="#pills-profile1" role="tab" aria-controls="pills-profile" aria-selected="false"> الطلبات الحالية</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false"> الطلبات السابقة</a>
            </li>


        </ul>


        <div class="tab-content" id="pills-tabContent">

            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="row list-of-orders">
                    @foreach (var item in Model)
                    {
                          if (item.Status == 1)
                        {
                            <div class="col-md-3 padd-5">
                                <a href="/SiteHome/DetailsOrder/@item.Id">
                                    <div class="item-order">
                                        <h5>
                                            <span>  رقم الطلب </span>
                                            <span>
                                                @item.NumberOrder
                                            </span>
                                        </h5>
                                        <h5>
                                            <span>   التاريخ   </span>
                                            <span>
                                                @item.Date.ToString("dd/MM/yyyy")
                                            </span>
                                        </h5>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>



            <div class="tab-pane fade" id="pills-profile1" role="tabpanel" aria-labelledby="pills-profile1-tab">
                <div class="row list-of-orders">
                    @foreach (var item in Model)
                    {
                       if (item.Status == 2)
                        {
                            <div class="col-md-3 padd-5">
                                <a href="/SiteHome/DetailsOrder/@item.Id">
                                    <div class="item-order">
                                        <h5>
                                            <span>  رقم الطلب </span>
                                            <span>
                                                @item.NumberOrder
                                            </span>
                                        </h5>
                                        <h5>
                                            <span>   التاريخ   </span>
                                            <span>
                                                @item.Date.ToString("dd/MM/yyyy")
                                            </span>
                                        </h5>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>



            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">

                <div class="row list-of-orders">
                    @foreach (var item in Model)
                    {
                       if (item.Status != 2 && item.Status != 1)
                        {
                            <div class="col-md-3 padd-5">
                                <a href="/SiteHome/DetailsOrder/@item.Id">
                                    <div class="item-order">
                                        <h5>
                                            <span>  رقم الطلب </span>
                                            <span>
                                                @item.NumberOrder
                                            </span>
                                        </h5>
                                        <h5>
                                            <span>   التاريخ   </span>
                                            <span>
                                                @item.Date.ToString("dd/MM/yyyy")
                                            </span>
                                        </h5>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>

        </div>
    </div>
}

else
{
    <br />
    <div class="empty-box">
        <h5> لا يوجد طلبات</h5>
        <img src="~/Content/Site/imgs/empty.png" />

    </div>
}






