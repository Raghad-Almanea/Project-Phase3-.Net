                "order": []


            });

        })

        function Validtion(id) {
            $.ajax({
                url: "/Sliders/ChangeState",
                type: "POST",
                dataType: "json",
                data: {
                    id: id
                },
                success: function (result) {

                    if (result.data == true) {
                        $('#' + id).css('color', 'green');
                        $('#' + id).html('مفعل');
                    } else if (result.data == false) {
                        $('#' + id).css('color', 'red');
                        $('#' + id).html('غير مفعل');

                    }
                    location.reload();
                },
                failure: function (info) {

                }
            });
        }


