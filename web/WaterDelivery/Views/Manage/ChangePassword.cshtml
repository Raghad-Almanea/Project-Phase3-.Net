@model WaterDelivery.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "تعديل كلمة السر";
    Layout = "../Shared/_Dashboard_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <div class="card-box" style="padding: 80px 20px 40px;">
            @*<h4 class="header-title m-t-0 m-b-30" style="text-align:center"></h4>*@
            <div class="row">

                <!-- -------------------------------------------------------------------------------------------------- -->



                <h2 style="text-align:center">تعديل كلمة المرور</h2>

                @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("كلمة المرور القديمة", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("كلمة المرور الجديدة", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label(" تاكيد كلمة المرور الجديدة", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class=" col-md-12">
                            <input type="submit" value="تغيير كلمة المرور" class="btn-new-style" />
                        </div>
                    </div>
                }
                <div style="margin-bottom:200px">
                    @Html.ActionLink("العودة الى الرئيسية", "Index", "Home", null, new { @class = "btn btn-black waves-effect waves-light m-b-5" })
                </div>
                <!-- -------------------------------------------------------------------------------------------------- -->


            </div><!-- end row -->
        </div>
    </div><!-- end col -->
</div>
